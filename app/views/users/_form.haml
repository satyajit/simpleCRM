- form_for @user do |f|
  = f.error_messages
  %p
    = f.label :firstname
    %br
    = f.text_field :firstname
  %p
    = f.label :lastname
    %br
    = f.text_field :lastname
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  %p
    = f.submit "Submit"
